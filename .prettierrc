{
  "printWidth": 120,
  "jsxBracketSameLine": true,
  "tabWidth": 4,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": [".prettierrc", ".stylelintrc"],
      "options": {
        "parser": "json",
        "tabWidth": 2
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "printWidth": 120,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "printWidth": 80,
        "singleQuote": true,
        "tabWidth": 2
      }
    }
  ]
}
